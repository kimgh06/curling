#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<windows.h>
#include<string.h>
#include<conio.h>
char board[50][60] = {
	" --------------------------------------------------------- ",
	"|                                                         |",
	"|                                                         |",
	"|              -----------------------------              |",
	"|             |                             |             |",
	"|             |    ---------------------    |             |",
	"|             |   |                     |   |             |",
	"|             |   |    -------------    |   |             |",
	"|             |   |   |             |   |   |             |",
	"|             |   |   |    -----    |   |   |             |",
	"|             |   |   |   |     |   |   |   |             |",
	"|             |   |   |   |     |   |   |   |             |",
	"|             |   |   |    -----    |   |   |             |",
	"|             |   |   |             |   |   |             |",
	"|             |   |    -------------    |   |             |",
	"|             |   |                     |   |             |",
	"|             |    ---------------------    |             |",
	"|             |                             |             |",
	"|              -----------------------------              |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                         |",
	"|                                                    ---  |",
	"|                                                   | 1 | |",
	"|                                                   | 2 | |",
	"|                                                   | 3 | |",
	"|                                                   | 4 | |",
	"|                                                   | 5 | |",
	"|                                                   | 4 | |",
	"|                                                   | 3 | |",
	"|                                                   | 2 | |",
	"|                                                   | 1 | |",
	"|                                                    ---  |",
	"|---------------------------------------------------------|",
	"|                                                 |       |",
	"|                                                 |       |",
	"|                                                 |       |",
	" ---------------------------------------------------------"
};
char title[50][60];
char ball[3] = {"|@|"};
int on = 0, locat = 1, up = 0, dtc = 0;
void sweep() {
	title[46][29] = '|';
	title[46][30] = '@';
	title[46][31] = '|';
	if (on == 1) {
		if (_kbhit()) {
			char a = _getch();
			if (a == ' ') {//가속 됨
				dtc += 1;
			}
		}
	}
}
void updown() {
	title[35 + locat][50] = '>';
	if (on == 0) {
		if (locat == 1) { //방향 설정
			up = 0;
		}
		else if (locat == 9) {
			up = 1;
		}
		if (up == 0) {
			locat++;
		}
		else if (up == 1) {
			locat--;
		}
	}
}
void start() {
	if (_kbhit()) { //입력 확인
		char a = _getch();
		if (a == ' ') { //스페이스바 아닐 경우 스킵
			on = 1;
			if (locat >= 6) {//초기 거리 설정
				switch (locat) {
				case 6:
					dtc += 4;
					break;
				case 7:
					dtc += 3;
					break;
				case 8:
					dtc += 2;
					break;
				case 9:
					dtc += 1;
					break;
				}
			}
			else
				dtc += locat;
			printf("%d", dtc);
		}
	}
}
void copy() {
	for (int i = 0; i < 50; i++) {
		strcpy(title[i], board[i]); // 배경복사
	}
	updown(); //위 아래로 움직이는 화살표
	sweep(); //출발후 가속
}
void print() {
	copy();
	for (int i = 0; i < 50; i++) {
		printf("\t\t\t\t\t\t");
		printf("%s", title[i]);
		if (i != 49)
			printf("\n");
	}
	Sleep(200);
	system("cls");
}
void gamestart() {
	while (1) {
		if (on == 0) {
			start();
		}
		else if (on == 1) {
			sweep();
		}
		print();
	}
}
int main() {
	gamestart();
}
