int on = 0;
void copy() {
	for (int i = 0; i < 50; i++) {
		strcpy(title[i], board[i]); // 배경복사
	}
	if (_kbhit()) { //입력 확인
		char a = _getch();
		if (a == ' ') { //스페이스바 아닐 경우 스킵
			if (on == 1) {

			}
			else
				on = 1;
		}
	}
}
void print() {
	for (int i = 0; i < 50; i++) {
		printf("\t\t\t\t\t\t");
		printf("%s", title[i]);
		if (i != 49)
			printf("\n");
	}
	Sleep(250);
	system("cls");
}
void gamestart() {
	while (1) {
		copy();
		print();
	}
}
int main() {
	gamestart();
}
